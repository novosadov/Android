<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <gradient
                        android:startColor="#12000000"
                        android:endColor="#24000000"
                        android:angle="270" />

                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="2dp"
                android:right="2dp">
                <shape>
                    <padding android:bottom="2dp"/>
                    <solid  android:color="#FFFFFF"/>
                    <corners android:radius="4dp"/>
                    <padding
                        android:left="5dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                <solid android:color="#FFFFFF"/>
                <corners android:radius="4dp"/>
            </shape>
            </item> <!-- BUTTON -->
            <item android:bottom="4dp">
                <shape>
                    <padding android:bottom="4dp"/>
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="270" />
                    <corners android:radius="5dp"/>
                    <padding
                        android:left="5dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
